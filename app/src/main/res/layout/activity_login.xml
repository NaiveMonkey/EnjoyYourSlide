<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.paulkim.enjoyyourslide.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mainback" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="16dp">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@drawable/logintext" />

        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mailbox"
            android:hint="youremail@mail.com"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#268e88"
            android:textColorHint="#268e88" />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mailbox"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="#268e88" />

        <!-- Login Button -->

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/selector_btn"
            android:text="@string/btn_login"
            android:textColor="#268e88" />

        <Button
            android:id="@+id/googleLogin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="42dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/selector_sample"
            android:drawableLeft="@drawable/common_google_signin_btn_icon_dark"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="-3dp"
            android:text="LOGIN with Google"
            android:textColor="#ffffff" />


        <!--
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="20dip"
            android:background="@color/btn_login_bg"
            android:textColor="@color/btn_login" />
            !-->

        <!-- Link to Login Screen -->

        <ImageView
            android:id="@+id/btnLinkToRegisterScreen"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dip"
            android:background="@null"
            android:src="@drawable/createbt" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/loginbar" />

</RelativeLayout>
