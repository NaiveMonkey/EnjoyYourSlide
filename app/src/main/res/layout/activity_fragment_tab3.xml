<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AppMainFragmentTab3">


    <TextView
        android:id="@+id/appSettingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="앱 설정"
        android:textColor="#555555"
        android:textSize="17dp" />


    <Switch
        android:id="@+id/lockScreenExeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appSettingTextView"
        android:paddingTop="22dp"
        android:text="잠금화면에서 앱 실행"
        android:textColor="#000000"
        android:textSize="20dp" />


    <Switch
        android:id="@+id/VibrationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lockScreenExeBtn"
        android:paddingTop="17dp"
        android:text="잠금해제 시 진동"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/accountSettingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="계정 관리"
        android:textColor="#555555"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/personIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/accountSettingTextView"
        android:paddingTop="22dp"
        android:text="personId"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/logoutBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/personIdTextView"
        android:background="@drawable/selector_setting"
        android:gravity="left|center"
        android:text="Logout"
        android:textSize="20dp" />

    <Button
        android:id="@+id/tutorialBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/logoutBtn"
        android:layout_below="@+id/logoutBtn"
        android:background="@drawable/selector_setting"
        android:gravity="left"
        android:text="Tutorial"
        android:textSize="20dp" />


</RelativeLayout>
