<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/abc_search_url_text_selected</item>
        <item name="colorAccent">@color/white</item>

        <item name="colorControlActivated">#268e88</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:textColorPrimary">@color/abc_search_url_text_selected</item>
        <item name="android:textColorSecondary">@color/secondary_text_default_material_light</item>
    </style>

    <style name="CustomActivityThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/background_material_dark</item>
        <item name="colorPrimaryDark">@color/abc_search_url_text_selected</item>
        <item name="android:textColorPrimary">@color/abc_input_method_navigation_guard</item>
        <item name="android:actionBarSize">90dp</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="ShortCutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">@color/abc_search_url_text_selected</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

    </style>


    <color name="Black_transparent">#80000000</color>


    <style name="tempStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#2E9AFE</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="tempMin" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="tempMax" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FF0000</item>
    </style>


    <style name="valData" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#74DF00</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
